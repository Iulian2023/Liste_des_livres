{% extends 'themes/base.html.twig' %}
{% block title %}Nouvelle Livre{% endblock %}
{% block main %}
    <h1 class="text-center display-5 my-3">Nouvelle Livre</h1>
    {{ form_start(form) }}
        <div class="container">
            <div class="col-md-6 mx-auto">
                <div class="mb-3">
                        <label for="livre_form_title">Title de Livre</label>
                        <div class="text-danger">
                            {{form_errors(form.title)}}
                        </div>
                        {{ form_widget(form.title, {'attr' : {'class' : 'form-control'}}) }}
                </div>
                <div class="mb-3">
                        <label for="livre_form_genre">Genre de Livre</label>
                        <div class="text-danger">
                            {{form_errors(form.genre)}}
                        </div>
                        {{ form_widget(form.genre, {'attr' : {'class' : 'form-control'}}) }}
                </div>
                <div class="mb-3">
                        <label for="livre_form_author">Author</label>
                        <div class="text-danger">
                            {{form_errors(form.author)}}
                        </div>
                        {{ form_widget(form.author, {'attr' : {'class' : 'form-control'}}) }}
                </div>
                <div class="mb-3">
                        <label for="livre_form_note">Note 0 Ã  10</label>
                        <div class="text-danger">
                            {{form_errors(form.note)}}
                        </div>
                        {{ form_widget(form.note, {'attr' : {'class' : 'form-control'}}) }}
                </div>
                <div class="my-3">
                    <input formnovalidate type="submit" value="Envoyer" class="btn btn-success w-100">
                </div>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}